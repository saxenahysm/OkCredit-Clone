<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/data_cons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottomsheet">

    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/font_8dp"
        android:layout_marginVertical="@dimen/font_8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal"
            android:padding="@dimen/font_4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="@dimen/font_24dp"
                android:layout_height="@dimen/font_24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/font_8dp"
                android:src="@drawable/ic_account"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/font_8dp"
                android:layout_marginLeft="@dimen/font_12dp"

                android:layout_weight="1"
                android:gravity="top|center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:paddingLeft="@dimen/font_4dp"
                    android:text="Name"
                    android:textColor="@color/grey_40"
                    android:textSize="@dimen/font_16sp" />

                <EditText
                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edtTextHeight_48dp"
                    android:layout_gravity="start|center"
                    android:layout_marginTop="@dimen/font_4dp"
                    android:background="@drawable/inputbox_grey"
                    android:hint="Please enter name"
                    android:inputType="textPersonName"
                    android:paddingLeft="@dimen/font_16dp"
                    android:paddingRight="@dimen/font_8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14sp"
                    app:drawableTint="@color/colorPrimary" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/font_4dp">

            <ImageView
                android:layout_width="@dimen/font_24dp"
                android:layout_height="@dimen/font_24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/font_8dp"
                android:src="@drawable/ic_android_phone"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/font_8dp"
                android:layout_marginLeft="@dimen/font_12dp"
                android:layout_weight="1"
                android:gravity="top|center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:paddingLeft="@dimen/font_4dp"
                    android:text="Mobile Number"
                    android:textColor="@color/grey_40"
                    android:textSize="@dimen/font_16sp" />

                <EditText
                    android:id="@+id/edt_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edtTextHeight_48dp"
                    android:layout_gravity="start|center"
                    android:layout_marginTop="@dimen/font_4dp"
                    android:background="@drawable/inputbox_grey"
                    android:hint="Please enter number"
                    android:inputType="phone"
                    android:paddingLeft="@dimen/font_16dp"
                    android:paddingRight="@dimen/font_8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14sp"
                    app:drawableTint="@color/colorPrimary" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/card_view_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/verify_button_dark"
        android:text="Submitt"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parent" />

</androidx.constraintlayout.widget.ConstraintLayout>