<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    tools:context=".fragment.OtpVerifyDialogFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:paddingHorizontal="@dimen/font_8dp"
                android:paddingVertical="@dimen/font_8dp"
                android:src="@drawable/ic_arrow_back_24px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginLeft="@dimen/font_4dp"
                android:layout_marginRight="@dimen/font_12dp"
                android:gravity="end"
                android:text="Change Number"
                android:textColor="@color/white"
                android:textSize="@dimen/font_18sp" />


        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/font_16dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginRight="@dimen/font_16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/font_20dp"
            android:fontFamily="sans-serif"
            android:gravity="start|center"
            android:text="Please be patient"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/font_8dp"
            android:fontFamily="sans-serif"
            android:gravity="start|center"
            android:text="Your OTP will be delivered soon on "
            android:textColor="@color/grey_90"
            android:textSize="@dimen/font_16dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="?attr/actionBarSize"
            android:src="@drawable/ic_message_on_phone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="88dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="60dp"
            android:paddingRight="60dp">

            <View
                android:layout_width="5dp"
                android:layout_height="0dp" />

            <EditText
                android:id="@+id/otp1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginVertical="@dimen/font_4dp"
                android:layout_weight="1"
                android:background="@drawable/input_box"
                android:focusable="true"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1"
                android:nextFocusRight="@id/otp2"
                android:singleLine="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <View
                android:layout_width="5dp"
                android:layout_height="0dp" />

            <EditText
                android:id="@+id/otp2"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginVertical="@dimen/font_4dp"
                android:layout_weight="1"
                android:background="@drawable/input_box"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1"
                android:singleLine="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <View
                android:layout_width="5dp"
                android:layout_height="0dp" />

            <EditText
                android:id="@+id/otp3"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginVertical="@dimen/font_4dp"
                android:layout_weight="1"
                android:background="@drawable/input_box"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1"
                android:nextFocusRight="@+id/otp4"
                android:singleLine="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <View
                android:layout_width="5dp"
                android:layout_height="0dp" />

            <EditText
                android:id="@+id/otp4"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginVertical="@dimen/font_4dp"
                android:layout_weight="1"
                android:background="@drawable/input_box"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1"
                android:nextFocusRight="@id/otp4"
                android:singleLine="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <View
                android:layout_width="5dp"
                android:layout_height="0dp" />


        </LinearLayout>

        <Button
            android:id="@+id/btn_otp_verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="52dp"
            android:layout_marginVertical="80dp"
            android:background="@drawable/verify_button_dark"
            android:text="Verify Number"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </LinearLayout>


</FrameLayout>