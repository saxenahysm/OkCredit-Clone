<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/businessType_action"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottomsheet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="left|center"
            android:layout_marginHorizontal="@dimen/font_12dp"
            android:layout_marginVertical="@dimen/font_4dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="Select your business type"
            android:textColor="@color/overlay_dark_80"
            android:textSize="@dimen/font_18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_40" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp">

            <LinearLayout
                android:id="@+id/ll_retailer_shop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edtTextHeight_48dp"
                android:layout_marginHorizontal="@dimen/font_12dp"
                android:layout_marginVertical="@dimen/font_4dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/font_24dp"
                    android:layout_height="@dimen/font_24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/font_8dp"
                    android:src="@drawable/ic_shopping_cart_of_checkered_design"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="left|center"
                    android:layout_marginHorizontal="@dimen/font_12dp"
                    android:layout_marginVertical="@dimen/font_4dp"
                    android:gravity="center"
                    android:text="Retail Shop"
                    android:textColor="@color/overlay_dark_80"
                    android:textSize="@dimen/font_18sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp">

            <LinearLayout
                android:id="@+id/ll_wholesaler_dist_shop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edtTextHeight_48dp"
                android:layout_marginHorizontal="@dimen/font_12dp"
                android:layout_marginVertical="@dimen/font_4dp"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/font_24dp"
                    android:layout_height="@dimen/font_24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/font_8dp"
                    android:src="@drawable/ic_wholesaler"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="left|center"
                    android:layout_marginHorizontal="@dimen/font_12dp"
                    android:layout_marginVertical="@dimen/font_4dp"
                    android:gravity="center"
                    android:text="Wholesale/Distributor"
                    android:textColor="@color/overlay_dark_80"
                    android:textSize="@dimen/font_18sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp">

            <LinearLayout
                android:id="@+id/ll_personal_use"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edtTextHeight_48dp"
                android:layout_marginHorizontal="@dimen/font_12dp"
                android:layout_marginVertical="@dimen/font_4dp"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/font_24dp"
                    android:layout_height="@dimen/font_24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/font_8dp"
                    android:src="@drawable/ic_position"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="left|center"
                    android:layout_marginHorizontal="@dimen/font_12dp"

                    android:layout_marginVertical="@dimen/font_4dp"
                    android:gravity="center"
                    android:text="Personal Use"
                    android:textColor="@color/overlay_dark_80"
                    android:textSize="@dimen/font_18sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp">

            <LinearLayout
                android:id="@+id/ll_online_service_shop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edtTextHeight_48dp"
                android:layout_marginHorizontal="@dimen/font_12dp"
                android:layout_marginVertical="@dimen/font_4dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/font_24dp"
                    android:layout_height="@dimen/font_24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/font_8dp"
                    android:src="@drawable/ic_service"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="left|center"
                    android:layout_marginHorizontal="@dimen/font_12dp"
                    android:layout_marginVertical="@dimen/font_4dp"
                    android:gravity="center"
                    android:text="Online Services"
                    android:textColor="@color/overlay_dark_80"
                    android:textSize="@dimen/font_18sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>