<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.setting.SettingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:paddingHorizontal="@dimen/font_8dp"
                android:paddingVertical="@dimen/font_8dp"
                android:src="@drawable/ic_arrow_back_24px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginLeft="@dimen/font_4dp"
                android:layout_marginRight="@dimen/font_12dp"
                android:gravity="end"
                android:text="Setting"
                android:textColor="@color/white"
                android:textSize="@dimen/font_18sp" />


        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingBottom="?attr/actionBarSize">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/font_8dp"
                android:visibility="visible">


                <LinearLayout
                    android:id="@+id/ll_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/font_8dp"
                    android:layout_marginTop="@dimen/font_8dp"
                    android:layout_marginRight="@dimen/font_8dp"
                    android:layout_marginBottom="@dimen/font_8dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/font_4dp">

                    <ImageView
                        android:layout_width="@dimen/font_24dp"
                        android:layout_height="@dimen/font_24dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/font_8dp"
                        android:src="@drawable/ic_account"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/font_12dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"
                            android:paddingHorizontal="@dimen/font_4dp"
                            android:paddingVertical="8dp"
                            android:text="Profile"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_16sp" />


                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/font_24dp"
                        android:layout_height="@dimen/font_24dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/font_8dp"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:visibility="visible" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/font_8dp"
                android:visibility="visible">


                <LinearLayout
                    android:id="@+id/ll_mobChange"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/font_8dp"
                    android:layout_marginTop="@dimen/font_8dp"
                    android:layout_marginRight="@dimen/font_8dp"
                    android:layout_marginBottom="@dimen/font_8dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/font_4dp">

                    <ImageView
                        android:layout_width="@dimen/font_24dp"
                        android:layout_height="@dimen/font_24dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/font_8dp"
                        android:src="@drawable/ic_sim_change"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/font_12dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"
                            android:paddingHorizontal="@dimen/font_4dp"
                            android:paddingVertical="8dp"
                            android:text="Change Number"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_16sp" />


                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/font_24dp"
                        android:layout_height="@dimen/font_24dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/font_8dp"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:visibility="visible" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/font_8dp"
                android:visibility="visible">


                <LinearLayout
                    android:id="@+id/ll_seqPin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/font_8dp"
                    android:layout_marginTop="@dimen/font_8dp"
                    android:layout_marginRight="@dimen/font_8dp"
                    android:layout_marginBottom="@dimen/font_8dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/font_4dp">

                    <ImageView
                        android:layout_width="@dimen/font_24dp"
                        android:layout_height="@dimen/font_24dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/font_8dp"
                        android:src="@drawable/ic_password"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/font_12dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"
                            android:paddingHorizontal="@dimen/font_4dp"
                            android:paddingVertical="8dp"
                            android:text="Change Sequrity Pin"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_16sp" />


                    </LinearLayout>


                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/sw_seqPin"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:layout_gravity="end|center"
                        android:layout_weight="1"
                        android:checked="false"
                        android:thumb="@drawable/status_active"
                        app:showText="false"
                        app:track="@drawable/status_inactive" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/font_8dp"
                android:visibility="visible">


                <LinearLayout
                    android:id="@+id/ll_fingerLock"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/font_8dp"
                    android:layout_marginTop="@dimen/font_8dp"
                    android:layout_marginRight="@dimen/font_8dp"
                    android:layout_marginBottom="@dimen/font_8dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/font_4dp">

                    <ImageView
                        android:layout_width="@dimen/font_24dp"
                        android:layout_height="@dimen/font_24dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/font_8dp"
                        android:src="@drawable/ic_fingerprint_scan"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/font_12dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"
                            android:paddingHorizontal="@dimen/font_4dp"
                            android:paddingVertical="8dp"
                            android:text="Fingerprint Unlock"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_16sp" />


                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/sw_finger_lock"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:layout_gravity="end|center"
                        android:layout_weight="1"
                        android:checked="false"
                        android:thumb="@drawable/status_active"
                        app:showText="false"
                        app:track="@drawable/status_inactive" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/font_8dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/ll_logout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/font_8dp"
                    android:layout_marginTop="@dimen/font_8dp"
                    android:layout_marginRight="@dimen/font_8dp"
                    android:layout_marginBottom="@dimen/font_8dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/font_4dp">

                    <ImageView
                        android:layout_width="@dimen/font_24dp"
                        android:layout_height="@dimen/font_24dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/font_8dp"
                        android:src="@drawable/ic_power_button"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/font_12dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"
                            android:paddingHorizontal="@dimen/font_4dp"
                            android:paddingVertical="8dp"
                            android:text="Sign Out"
                            android:textColor="@color/red_900"
                            android:textSize="@dimen/font_16sp" />


                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>